<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
　      <%= @user.errors.count %>errors prohibited this obj from being saved:
　      <ul>
　       <% @user.errors.full_messages.each do |message| %>
　        <li><%= message %></li>
　       <% end %>
　      </ul>
　    <% end %>
       <%= form_with model:@user, local: true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
          <br><%= f.text_field :name %></br>
        </div>
        <div class="form-group">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
          <label for="inputImage">Image</label>
          <br><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>
        </div>
        <div class="form-group">
          <label for="Introduction">Introduction</label>
          <br><%= f.text_area :introduction %></br>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
    </div>
     <% end %>
  </div>
</div>